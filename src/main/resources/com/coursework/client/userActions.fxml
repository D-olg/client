<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>

<AnchorPane stylesheets="@../css/styles.css"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.coursework.client.controllers.UserActionsController"
            prefWidth="600" prefHeight="400">

    <GridPane hgap="30" vgap="20"
              alignment="CENTER"
              AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20"
              AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

        <padding>
            <Insets top="30" right="40" bottom="30" left="40"/>
        </padding>

        <Button text="Расчет стоимости"
                fx:id="editUsersButton"
                onAction="#onCalculationClicked"
                styleClass="button"
                GridPane.rowIndex="0" GridPane.columnIndex="0"/>

        <Button text="Редактировать компании"
                fx:id="editCompaniesButton"
                styleClass="button"
                GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Button text="Просмотр логов"
                fx:id="viewLogsButton"
                styleClass="button"
                GridPane.rowIndex="1" GridPane.columnIndex="0"/>

        <Button text="Редактировать тарифы"
                fx:id="editTariffsButton"
                styleClass="button"
                GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Button text="Выход"
                fx:id="logoutButton"
                onAction="#onBackToMenu"
                styleClass="button"
                GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    </GridPane>
</AnchorPane>
