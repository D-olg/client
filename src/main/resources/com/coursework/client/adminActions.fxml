<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.coursework.client.controllers.AdminController"
            prefWidth="300" prefHeight="200">
    <TableView fx:id="usersTable" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" AnchorPane.bottomAnchor="10">
        <columns>
            <TableColumn fx:id="idColumn" text="ID" />
            <TableColumn fx:id="usernameColumn" text="Username" />
            <TableColumn fx:id="emailColumn" text="Email" />
            <TableColumn fx:id="roleColumn" text="Role" />
            <TableColumn fx:id="actionsColumn" text="Actions" />
        </columns>
    </TableView>
    <Button fx:id="reloadButton" text="Reload" onAction="#onReloadClicked" AnchorPane.bottomAnchor="10" AnchorPane.leftAnchor="10" />
</AnchorPane>
